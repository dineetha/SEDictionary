{
   "background": {
      "page": "background.html",
	  "persistent": false
   },
   "browser_action": {
      "default_icon": {
         "19": "img/icon19.png",
         "38": "img/icon38.png"
      },
      "default_popup": "popup.html",
      "default_title": "SE Dictionary"
   },
 "content_scripts": [
    {
      "matches": ["http://*/"],
      "css": ["popup.css"],
      "js": ["popup.js"]
    }],

   "description": "English to Sinhala and Sinhala to English Dictionary. Created by Sudam Dineetha. ©GSI",
   "icons": {
      "128": "img/icon128.png",
      "16": "img/icon16.png",
      "48": "img/icon48.png"
   },
   "manifest_version": 2,
   "name": "SE Dictionary",
   "offline_enabled": true,
   "permissions": ["tabs", "http://*/", "https://*/", "contextMenus" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "1.0"
}
